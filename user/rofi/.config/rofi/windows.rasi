configuration {
    theme: "windows";
    modi: "window";
}

@import "base.rasi"
@import "icon-large.rasi"

window {
    location: northwest;
    anchor: northwest;
    width: calc(20% + 6px); // 20% + border radius
    height: 100%;
    x-offset: calc(-6px - 8px - 1px); // - (border radius + mainbox.border / 2 + hacky fix)
}

mainbox {
    padding: 20px 20px 20px 26px; // base (+ border radius for left side)
    children: [inputbar,listview];
}

inputbar {
    children: [entry];
}

